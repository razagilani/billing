<VirtualHost *:80>
    ServerAdmin webmaster@localhost
    ServerName xbill-dev.nextility.net
    ServerAlias xbill-dev

    <Directory /var/local/xbill-dev/xbill/wsgi/>
        Order allow,deny
        Allow from all
    </Directory>
    # this "alias was necessary to serve static files for the XBill "admin"
    # site, but we don't know why. we expected the "Directory" command below to
    # do it, or or Django to serve files in its "STATIC_ROOT" path by itself,
    # but this fixed 404 errors.
    alias /static/ /var/local/xbill-dev/xbill/static/
    <Directory /var/local/xbill-dev/xbill/static/>
        Order allow,deny
        Allow from all
    </Directory>

    # Possible values include: debug, info, notice, warn, error, crit,
    # alert, emerg.
    LogLevel error

    ErrorLog /etc/httpd/logs/xbill-dev_error.log
    CustomLog /etc/httpd/logs/xbill-dev_access.log combined

    WSGIScriptAlias / /var/local/xbill-dev/xbill/wsgi/wsgi.py
    WSGIDaemonProcess xbill-dev user=xbill-dev group=xbill-dev home=/var/local/xbill-dev/xbill/ python-path=/var/local/xbill-dev/lib/python2.7/dist-packages:/var/local/xbill-dev/lib/python2.7/site-packages:/var/local/xbill-dev/xbill
    WSGIProcessGroup xbill-dev
    WSGIApplicationGroup %{GLOBAL}
</VirtualHost>
