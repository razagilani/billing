        #Order deny,allow
        #Allow from all
        Options Indexes FollowSymLinks MultiViews
        #AllowOverride None
    </Directory>


    ErrorLog /var/log/apache2/reebill-error.log

    # Possible values include: debug, info, notice, warn, error, crit,
    # alert, emerg.
    LogLevel debug

    CustomLog /var/log/apache2/reebill-access.log combined

